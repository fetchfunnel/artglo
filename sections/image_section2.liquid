{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }


#shopify-section-template--20712805368118__9f09c02c-3713-4bee-b6ba-618ed92ba0e8 {
    background-image: url(https://www.artglo.com/cdn/shop/files/Homehero.jpg);
}

.header-wrapper.color-background-1.gradient.header-wrapper--border-bottom {
    background-image: url(https://www.artglo.com/cdn/shop/files/Homehero.jpg);
}

.header-wrapper--border-bottom {
    border-bottom: 0rem solid rgba(var(--color-foreground),.08);

}

.image-with-text__content {
    padding: 0px 80px 10px 0px !important;
}

 .image-with-text.image-with-text--no-overlap.page-width.isolate.section-template--20712805368118__9f09c02c-3713-4bee-b6ba-618ed92ba0e8-padding.scroll-trigger.animate--slide-in {
    width: 100%;
}

.image-with-text__text-item.grid__item {
    padding-left: 65px;
}

.info {
    display: flex;
    justify-content: center;
    align-items: center;
}
.info.infoicon{
    margin-top: -20px;
}

.image-with-text__text.rte.body {
    color: white;
}
.info img {    float: left;
}
.info p {    position: relative;
    float: right;
    margin-left: 20px;
color: white;}


 .image-with-text:not(.collapse-corners,.image-with-text--overlap) .image-with-text__media-item {
    max-width: 40%;
 
} 

.button:disabled, .button[aria-disabled=true], .button.disabled, .customer button:disabled, .customer button[aria-disabled=true], .customer button.disabled, .quantity__button.disabled {
    cursor: not-allowed;
    opacity: 1;
    background: #E50C7D;
    border-radius: 5px;
}


a.button.button--primary {
    opacity: 1;
    background: #E50C7D;
    border-radius: 5px;
    color: white !important;
}

