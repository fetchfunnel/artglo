<script>
   let tmbOfferHeader = document?.querySelector(".tmb_offer_header")
    let topPosition =  tmbOfferHeader.getBoundingClientRect().top;
      window.addEventListener("scroll",()=>{
        if(window.scrollY > topPosition){
          tmbOfferHeader.classList.add("sticky-banner")
        }else{
          tmbOfferHeader.classList.remove("sticky-banner")
        }
      })
    
</script>



































